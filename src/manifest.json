{
    "manifest_version": 2,
    "name": "Imgur Community Extension",
	"author": "Mark Muego",
    "description": "A Chrome extension made by and for the Imgur Community.",
    "version": "1.1",
    "icons": {
        "128": "img/icon128.png" },
    "permissions": [
		"storage",
		"tabs",
		"activeTab",
		"*://*.imgur.com/*", "*://imgur.com/*"
	],
	"content_scripts": [
		{
			"matches": ["*://*.imgur.com/*"],
			"js": ["js/jquery-2.2.2.min.js", "js/pageGlobal.js"],
			"css": ["css/ice.css"],
			"run_at": "document_end"
		}
	],
    "background": {
		"scripts": ["js/icebg.js"]
    }
}
